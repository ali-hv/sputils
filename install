#!/bin/bash

SCRIPT_NAME="sputils"
DEST="/usr/local/bin/$SCRIPT_NAME"

if [ ! -f "$SCRIPT_NAME" ]; then
  echo "‚ùå Error: '$SCRIPT_NAME' script not found in current directory."
  exit 1
fi

echo "üì• Installing $SCRIPT_NAME to $DEST ..."
chmod +x "$SCRIPT_NAME"
sudo cp "$SCRIPT_NAME" "$DEST"

if command -v $SCRIPT_NAME >/dev/null 2>&1; then
  echo "‚úÖ Installed successfully. Try running: $SCRIPT_NAME help"
else
  echo "‚ö†Ô∏è Something went wrong. $SCRIPT_NAME is not available in PATH."
fi
